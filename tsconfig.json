{
    "compileOnSave": true,
    "compilerOptions": {
      "watch": true,
      "module": "es6",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "allowJs": true,
      "outDir": "public/js/",
      "target": "es2020",
      "sourceMap": true,
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": ["public/js/**/*", "node_modules/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}