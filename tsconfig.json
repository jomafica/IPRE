{
    "compileOnSave": true,
    "compilerOptions": {
      "watch": true,
      "module": "system",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outFile": "public/js/bundle.js",
      "target": "es2020",
      "sourceMap": true
    },
    "include": ["public/js/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}